#!/usr/bin/env sh

#
# Environment.
#
# Take care not to commit any secrets here.
#

this_path="$(cd "$(dirname "$1")" && pwd)"

# Test.
  export cosmos_config_test_e2e_headless='false'
  export cosmos_config_test_e2e_base_url='https://todomvc.com/examples/react/dist/'

  export cosmos_config_test_report_results_title='Unit Test Results'
  export cosmos_config_test_report_results_path='tmp/test/bats/results'
  export cosmos_config_test_output_path='tmp/test/bats/output'

# logging.
  export cosmos_config_log_path="$this_path/tmp/logs"
  export cosmos_config_log_console='true'
  export cosmos_config_log_level_console='silly'
  export cosmos_config_log_file='true'
  export cosmos_config_log_level_file='silly'
  export cosmos_config_log_console_timestamp='false'
  export cosmos_config_log_file_timestamp='true'

  export cosmos_config_log_color='true'
  export cosmos_config_log_emoji='true'
  export cosmos_config_log_timestamp='false'
  export cosmos_config_log_prefix_begin='['
  export cosmos_config_log_prefix_end=']'
  
  export cosmos_config_log_emoji_error='‚ùå'
  export cosmos_config_log_emoji_warn='‚ö†Ô∏è'
