  export cosmos_config_log_emoji_debug='üêõ'
  export cosmos_config_log_emoji_trace='üîç'
  export cosmos_config_log_emoji_silly='ü§™'

  export cosmos_config_say_color='true'
  export cosmos_config_say_timestamp='false'

# Image build.
  export cosmos_config_image_arch='amd64'
  export cosmos_config_image_tag_from='debian:12.12-slim'
  export cosmos_config_image_tag_to='cosmos:dev'

  export cosmos_config_python_install='true'
  export cosmos_config_python_version='3.12.4'

  export cosmos_config_poetry_install='true'
  export cosmos_config_poetry_version='2.2.1'

  export cosmos_config_node_install='true'
  export cosmos_config_node_version='24.10.0'

  export cosmos_config_typescript_install='true'
